    <style type='text/css'>
		  .table-no-border>thead>tr>th, 
		  .table-no-border>tbody>tr>th, 
		  .table-no-border>tfoot>tr>th, 
		  .table-no-border>thead>tr>td, 
		  .table-no-border>tbody>tr>td, 
		  .table-no-border>tfoot>tr>td {
					   border-top: none; 
		  }
    </style>
